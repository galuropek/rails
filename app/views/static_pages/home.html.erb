<% provide(:title, "Home") %>

<% if logged_in? %>
  <div class="row">
    <div class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </div>
    <div class="col-md-8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>Welcome to the Sample App</h1>

    <h2>This is the home page sample application</h2>

    <%= link_to "Sing up now!", signup_path, class: "btn btn-lg btn-primary" %>
  </div>

  <%= link_to image_tag("rails-logo.svg", alt: "Rails.logo", width: 130, height: 46), 'https://rubyonrails.org' %>
<% end %>